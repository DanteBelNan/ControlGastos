<div class="container mt-2">
  {{#if error}}
  <div class="alert alert-danger" role="alert">
    {{ message }}
  </div>
  {{/if}}
  
  <header class="text-center">
    <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
      <a href="/home/{{previousMonth}}/{{year}}" class="btn btn-secondary"><span class="arrow-icon">&lt;</span></a>
      {{month}} / {{year}}
      <a href="/home/{{nextMonth}}/{{year}}" class="btn btn-secondary"><span class="arrow-icon">&gt;</span></a>
    </nav>
  </header>
  <div class="d-flex overflow-auto">
    {{#eq categoriasA.length 0}}
      {{#eq categoriasB.length 0}}
        <div class="d-flex justify-content-center">
          <h2>No hay movimientos este mes</h2>
        </div>
      {{/eq}}
    {{/eq}}
    <div class="col-md-4">
      <div class="card mb-4">
          <div class="card-body">
              <h1>Acreditaciones</h1>

          </div>
          <div class="card-footer">
              <h1>Total: {{ totalAcredit}}</h1>
          </div>
        </div>
    </div>
    {{#each categoriasA as | categoriaA |}}
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body" style="background-color: {{categoriaA.color}};">
            <h2>{{categoriaA.nombre}}</h2>

            <ul class="list-group">
              {{#each categoriaA.movimientos as | movimiento |}}
              <li class="list-group-item">
                <h5 class="card-title">{{movimiento.detalle}}</h5>
                <p class="card-text">Monto: {{movimiento.monto}}</p>
              </li>
              {{/each}}
            </ul>

          </div>
          <div class="card-footer">
            <h2>Total: {{categoriaA.total}}</h2>
          </div>
        </div>
      </div>
    {{/each}}

    <div class="col-md-4">
      <div class="card mb-4">
          <div class="card-body">
              <h1>Debitos</h1>

          </div>
          <div class="card-footer">
              <h1>Total: {{ totalDebit}}</h1>
          </div>
        </div>
    </div>
    {{#each categoriasD as | categoriaD |}}
    
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body" style="background-color: {{categoriaD.color}};">
            <h2>{{categoriaD.nombre}}</h2>

            <ul class="list-group">
              {{#each categoriaD.movimientos as | movimiento |}}
              <li class="list-group-item">
                <h5 class="card-title">{{movimiento.detalle}}</h5>
                <p class="card-text">Monto: {{movimiento.monto}}</p>
              </li>
              {{/each}}
            </ul>

          </div>
          <div class="card-footer">
            <h2>Total: {{categoriaD.total}}</h2>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
