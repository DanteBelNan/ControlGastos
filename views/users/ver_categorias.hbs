<div class="container">
  <form action="/users/categorias/crear/{{id_usuario}}" method="get">
    <button type="submit" class="btn btn-primary mt-3 mb-3">Crear Categoría</button>
  </form>

  <table id="Categorias" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
        <th>Nombre</th>
        <th style="width: 10%;">Color</th>
        <th style="width: 10%;">Modificar</th>
        <th style="width: 10%;">Eliminar</th>
      </tr>
    </thead>
    <tbody>
      {{#each categorias}}
        <tr>
          <td>{{nombre}}</td>
          <td style="background-color: {{color}};"></td>
          <td style="text-align: center;"><a href="/users/categorias/modificar/{{idCategoria}}" class="btn btn-warning">🔨</a></td>
          <td style="text-align: center;"><a href="/users/categorias/eliminar/{{idCategoria}}" class="btn btn-danger">🗑️</a></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>


