  <style>
    .custom-border {
      border: 1px solid #ccc;
      padding: 20px;
      text-align: center; /* Alinea el contenido al centro */
    }

    .mb-3-custom {
      margin-bottom: 15px; /* Espacio entre elementos */
    }

    .btn-center {
      display: flex;
      justify-content: center;
    }
  </style>

<form action="/users/categorias/{{#if modificar}}modificar/{{idCategoria}}{{else}}crear/{{id_usuario}}/{{/if}}" method="post">
  <h1 class="mb-3 mb-3-custom">
    {{#if modificar}}
      Modificar
    {{else}}
      Crear
    {{/if}}
    Categoría
  </h1>
  <div class="form-group mb-3 mb-3-custom">
    <label for="categoria">Nombre:</label>
    <input type="text" class="form-control" id="categoria" name="categoria" placeholder="Nombre de categoría" {{#if modificar}}value="{{valorCategoria}}" {{/if}}>
    <label for="categoria">Color:</label>
    <input type="color" class="form-control" style="height: 50px;" id="color" name="color" value="{{#if modificar}}{{color}}{{else}}#d2c6c6{{/if}}">
  </div>
  <div class="btn-center">
    <button type="submit" class="btn btn-primary">
      {{#if modificar}}
        Modificar
      {{else}}
        Crear
      {{/if}}
    </button>
  </div>
</form>